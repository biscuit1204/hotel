.search {
  width: 90%;
  margin-left: 5%;
}
u-search {
  width: 90%;
  margin-left: 5%;
}
.main {
  width: 100%;
  margin-top: 50rpx;
}
.index {
  width: 90%;
  margin: 0 5%;
}
.item {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  border-radius: 35rpx;
  background: #ffffff;
  box-shadow: -8px 8px 35px #d9d9d9, 8px -8px 35px #ffffff;
  display: flex;
}
.left {
  width: 30%;
  height: 100%;
  padding-right: 20rpx;
}
.left image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.right {
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}
.right image {
  width: 30rpx;
  height: 30rpx;
}
.text-name {
  font-size: 32rpx;
  font-weight: bold;
}
.text-num {
  font-size: 28rpx;
  color: #416699;
}
.text-address {
  font-size: 24rpx;
  color: #777777;
  line-height: 60rpx;
}
.text-price {
  font-size: 40rpx;
  color: red;
  position: absolute;
  width: 100%;
  right: 30rpx;
  bottom: 20rpx;
  width: auto;
}
.text-img {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  line-height: 50rpx;
}

