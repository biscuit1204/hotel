.back {
  width: 100%;
  height: 35vh;
  position: fixed;
  top: 0;
  z-index: -1;
}
.back swiper {
  width: 100%;
  height: 100%;
}
.back swiper swiper-item {
  width: 100%;
  height: 100%;
}
.back swiper swiper-item image {
  width: 100%;
  height: 100%;
}
.main {
  position: fixed;
  top: 28vh;
  background-color: #ffffff;
  width: 90%;
  margin: 0 5%;
  height: 40vh;
  border-radius: 35rpx;
  background: #ffffff;
  box-shadow: -8px 8px 35px #d9d9d9, 8px -8px 35px #ffffff;
}
.main .item {
  margin: 0 35rpx;
  width: calc(100% - 70rpx);
  height: 100%;
}
.main .item .item-text {
  height: calc(25% - 1rpx);
  width: 100%;
  border-bottom: solid #f0f0f0 1rpx;
}
.main .item .item-text .text {
  font-size: 32rpx;
  width: 100%;
  height: 100%;
  padding-top: 4%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.main .item .item-text .text image {
  width: 40rpx;
  height: 40rpx;
}
.textDate {
  font-size: 32rpx;
  display: flex;
  align-items: center;
  vertical-align: bottom;
}
.week {
  font-size: 24rpx;
  color: #777;
}
.u-popupView {
  height: 35vh;
}
.titleText {
  color: #ffffff;
  position: fixed;
  top: 200rpx;
  left: 5%;
  font-size: 100rpx;
}
.u-popupView-main {
  margin: 5%;
  height: 100%;
  width: 90%;
}
.price {
  margin-bottom: 50rpx;
}
.price text {
  font-size: 36rpx;
}
.price .inpu {
  font-size: 32rpx;
  margin: 20rpx 0;
  display: flex;
  justify-content: space-between;
}
.price .inpu input {
  width: 40%;
  border-radius: 35rpx;
  background-color: #f0f0f0;
  padding: 10rpx 15rpx;
}
.button {
  width: 350rpx;
  height: 100rpx;
  background-color: #416699;
  border-radius: 40rpx;
  color: #fcfcfc;
  font-size: 50rpx;
  line-height: 100rpx;
  text-align: center;
}
.button1 {
  width: 250rpx;
  height: 80rpx;
  background-color: #416699;
  border-radius: 40rpx;
  color: #fcfcfc;
  font-size: 36rpx;
  line-height: 80rpx;
  text-align: center;
}
.item-text1 {
  height: 25%;
  width: 100%;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
}
.price1 {
  display: flex;
  justify-content: center;
  align-items: center;
}
.text1 {
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 400rpx;
}

