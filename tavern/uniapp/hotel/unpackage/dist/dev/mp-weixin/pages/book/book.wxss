.empty {
  width: 100%;
  height: 100vh;
}
.main {
  width: 90%;
  margin-left: 5%;
}
.main .index {
  width: 100%;
  height: 450rpx;
  border-radius: 35rpx;
  margin-top: 10rpx;
  background: #ffffff;
  padding: 35rpx;
  border-radius: 35rpx;
  background: #ffffff;
  box-shadow: -8px 8px 35px #d9d9d9, 8px -8px 35px #ffffff;
  background-color: #fcfcfc;
  position: relative;
  margin-bottom: 50rpx;
}
.main .room {
  width: 100%;
  height: 150rpx;
  margin: 20rpx 0;
  display: flex;
}
.main .room .room-left {
  width: 35%;
  height: 100%;
}
.main .room .room-left image {
  width: 100%;
  height: 100%;
}
.main .room .room-right {
  margin-left: 5%;
  width: 60%;
  height: 100%;
  font-weight: bold;
  font-size: 32rpx;
  background-color: #ffffff;
}
.main .room .room-right view {
  height: 50%;
}
.text {
  font-size: 32rpx;
}
.text view {
  height: 50rpx;
}
.but {
  height: 80rpx;
  position: absolute;
  right: 20rpx;
}
.but .butt {
  width: 150rpx;
  height: 100%;
  border-radius: 35rpx;
  background-color: #416699;
  color: #ffffff;
  line-height: 80rpx;
  text-align: center;
  font-size: 33rpx;
}
.text-hotel-name {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 2;
}

