.main {
  width: 90%;
  margin-left: 5%;
}
.main .item {
  width: 100%;
  border-radius: 35rpx;
  height: 200rpx;
  background: #ffffff;
  box-shadow: -8px 8px 35px #d9d9d9, 8px -8px 35px #ffffff;
  display: flex;
  margin: 20rpx 0;
  padding: 20rpx;
  margin-right: 10rpx;
  align-items: center;
}
.main .item .left {
  width: 30%;
  height: 100%;
  margin-right: 10rpx;
}
.main .item .left image {
  width: 100%;
  height: 100%;
  border-radius: 35rpx;
}
.main .item .center {
  width: 50%;
  height: 100%;
}
.main .item .center title {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.main .item .center .center-item {
  margin-top: 10rpx;
}
.main .item .center .center-item .u-tag {
  margin: 5rpx;
}
.main .item .right {
  width: 20%;
  height: 50rpx;
  border-radius: 35rpx;
  background-color: #007aff;
  line-height: 50rpx;
  color: #ffffff;
  text-align: center;
}

